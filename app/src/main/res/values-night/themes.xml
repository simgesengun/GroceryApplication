<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroceryApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wild_watermelon</item>
        <item name="colorPrimaryVariant">@color/caribbean_green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="TextView.Promotions" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/athens_gray</item>
        <item name="android:fontFamily">@font/yellowtail</item>
        <item name="fontFamily">@font/yellowtail</item>
        <item name="android:lines">5</item>
        <item name="android:minLines">2</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>