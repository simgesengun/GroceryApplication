<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroceryApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wild_watermelon</item>
        <item name="colorPrimaryVariant">@color/caribbean_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/athens_gray</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="Base.V7.Widget.AppCompat.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/gradient</item>
        <item name="android:paddingTop">24dp</item>
        <item name="contentInsetStart">48dp</item>
    </style>
    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/athens_gray</item>
        <item name="android:fontFamily">@font/yellowtail</item>
        <item name="fontFamily">@font/yellowtail</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="AddButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">40%</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">40%</item>
    </style>
    <style name="TextView.Profile" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextView.Profile.Bold" parent="TextView.Profile">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
    <style name="TextView.Promotions" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/yellowtail</item>
        <item name="fontFamily">@font/yellowtail</item>
        <item name="android:lines">5</item>
        <item name="android:minLines">2</item>
        <item name="android:textSize">20sp</item>

    </style>
</resources>